<!-- res/layout/listcountry.xml -->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/mealDateText"
            android:layout_width="94dp"
            android:layout_height="30dp"
            android:text="Line1"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/mealNameText"
            android:layout_width="94dp"
            android:layout_height="30dp"
            android:layout_toEndOf="@id/mealDateText"
            android:text="Line2"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/mealCaloriesText"
            android:layout_width="94dp"
            android:layout_height="30dp"
            android:layout_below="@id/mealDateText"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="4dp"
            android:text="Line3"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/mealTypeText"
            android:layout_width="94dp"
            android:layout_height="30dp"
            android:layout_below="@id/mealNameText"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/mealCaloriesText"
            android:text="Line4" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>
